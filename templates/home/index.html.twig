{% extends 'base.html.twig' %}

{% block title %}Accueil- {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold underline text-center mt-6">Site d'avis entreprises</h1>

    <div {{react_component('Home', {companies: companies}) }}></div>

    <a href="{{path('app_review_new')}}">Laisser un avis</a>

    <ul class='divide-y space-y-2 my-12'>
       {% for review in reviews %}
         <li>
            <a href="#" class='flex gap-4'>
            <strong>{{review.user.name}}</strong>
            <span>{{review.content}}</span>
            
            </a>
        </li>
       {% endfor %}
    </ul>
{% endblock %}
